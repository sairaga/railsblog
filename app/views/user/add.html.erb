<h1>Sign up to Microblogging site </h1>
<div class="dialog">
<%= form_for(@addUser, url: '/user/insert') do |f| %>
	<br>
	<%= f.label("Enter login id: ") %>
	<%= f.text_field(:userid,:required =>'true',:pattern =>".{5,8}") %>
	<br/> <br>
	<%= f.label("Enter password: ") %>
	<%= f.password_field(:password,:required =>'true') %>
	<br/> <br>
	<%= f.label("Enter full name: ") %>
	<%= f.text_field  :name,:required =>'true' %>
	<br/> <br>
	<%= f.submit("Add") %>
	<%#= link_to "Back", user_login_path %>
	<br><br>
<% end %>
</div>